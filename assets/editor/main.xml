<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" height="100%">
    <menubar>
        <menubutton text="Edit" id="menuEdit">
            <menu>
                <menuitem text="copy" id="copyEdit" />
                <menuitem text="cut" id="cutEdit" />
                <menuitem text="past" id="pastEdit" />
            </menu>
        </menubutton>   
        <menubutton text="Scene" id="menuScene">
            <menu>
                <menuitem text="New" id="newScene" />
                <menuitem text="Save" id="saveScene" />
                <menuitem text="Load" id="loadScene" />
            </menu>
        </menubutton>
        <menubutton text="Entity" id="menuEntity">
            <menu>
                <menuitem text="New" id="createEntity" />
                <menuitem text="Save" id="saveEntity" />
                <menuitem text="Load" id="loadEntity" />
            </menu>
        </menubutton>   
        <button text="play" id="play/pause" toggle="true"/>   
        <button text="stop" id="stop" /> 
    </menubar>
    <hbox width="100%" height="100%">

        <Tabview id="inspector" width="15%" height="100%">
            <vbox height="100%" width="100%" text="entities">
                <listview id="entities" width="100%" height="25%">    
                </listview>
                <text text="Components" />
                <Accordion id="components" width="100%" height="75%">    
                </Accordion>
            </vbox>
            <vbox height="100%" width="100%" text="systems">
                <Accordion id="systems" width="100%" height="100%">    
                </Accordion>
            </vbox>     
        </Tabview>
      
        <absolute id="renderZone" width="100%" height="100%">
        </absolute>
        

    </hbox>
</vbox>